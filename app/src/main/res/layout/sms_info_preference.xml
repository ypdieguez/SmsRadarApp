<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/sms_sent_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:textSize="67sp"
        tools:targetApi="jelly_bean" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sms_sent_count"
        android:layout_toEndOf="@+id/sms_sent_count"
        android:layout_toRightOf="@+id/sms_sent_count"
        android:fontFamily="sans-serif-light"
        android:text="SMS"
        android:textSize="16.75sp"
        tools:ignore="HardcodedText"
        tools:targetApi="jelly_bean" />

</RelativeLayout>